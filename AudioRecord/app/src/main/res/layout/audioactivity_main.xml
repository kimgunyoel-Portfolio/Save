<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Audio.Activity.AudioActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <Button
        android:id="@+id/recordlv_bt1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="저 장 목 록"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/recordlv_bt1"/>

    <TextView
        android:id="@+id/audio_tv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="#747474"
        android:text="00:00:00"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">


        <!-- 녹음 중지 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/recordstop_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="녹음중지"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="@drawable/recordstop_bt"/>

        </LinearLayout>

        <!-- 녹음시작 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/recordplay_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="녹   음"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="@drawable/recordplay_bt"/>


        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"/>


</LinearLayout>